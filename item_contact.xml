<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Première lettre dans un cercle -->
    <TextView
        android:id="@+id/tvFirstLetter"
        style="@style/FirstLetterText"
        android:gravity="center"
        android:background="@drawable/circle_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Nom du contact -->
    <TextView
        android:id="@+id/tvName"
        style="@style/ContactNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/tvFirstLetter"
        app:layout_constraintTop_toTopOf="@id/tvFirstLetter"
        app:layout_constraintBottom_toBottomOf="@id/tvFirstLetter"
        app:layout_constraintEnd_toStartOf="@id/ivWhatsApp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"/>

    <!-- Icône WhatsApp -->
    <ImageView
        android:id="@+id/ivWhatsApp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="WhatsApp Icon"
        android:src="@drawable/ic_whatsapp"
        app:layout_constraintEnd_toStartOf="@id/btnCall"
        app:layout_constraintTop_toTopOf="@id/tvFirstLetter"
        app:layout_constraintBottom_toBottomOf="@id/tvFirstLetter"
        android:visibility="visible"
        android:layout_marginEnd="8dp"/>

    <!-- Bouton Appeler -->
    <Button
        android:id="@+id/btnCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appeler"
        android:textColor="@color/whatsapp_green"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:minWidth="64dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvFirstLetter"
        app:layout_constraintBottom_toBottomOf="@id/tvFirstLetter" />

</androidx.constraintlayout.widget.ConstraintLayout>
